@model List<MyAcademyCarBook.EntityLayer.Concrete.Team>

<div class="site-section bg-light">
    <div class="container">
        <div class="row justify-content-center text-center mb-5 section-2-title">
            <div class="col-md-6">
                <span class="text-primary">Takımımız</span>
                <h2 class="mb-4">Takımımızla Tanış</h2>
                <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Reiciendis provident eius ratione velit, voluptas laborum nemo quas ad necessitatibus placeat?</p>
            </div>
        </div>
        <div class="row align-items-stretch">

            @foreach(var item in Model)
            {
                <div class="col-lg-4 col-md-6 mb-5">
                    <div class="post-entry-1 h-100 person-1">

                        <img src="@item.ImageUrl" alt="Image"
                             class="img-fluid">

                        <div class="post-entry-1-contents">
                            <span class="meta">@item.Title</span>
                            <h2>@item.NameSurname</h2>
                            <p>@item.Description</p>
                        </div>
                    </div>
                </div>

            }

        </div>
    </div>
</div>
