@model MyAcademyCarBook.EntityLayer.Concrete.Location
@{
    ViewData["Title"] = "AddLocation";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h1>Yeni Konum Girişi</h1>

<form method="post">
    <label>Konum</label>
    <input type="text" asp-for="LocationName" class="form-control" style="border:1px solid #2222" />
    <label>Durum</label>
    <input type="text" asp-for="Status" class="form-control" style="border:1px solid #2222" />
    <br />
    <button class="btn btn-primary">Konumu Kaydet</button>
</form>


