@model List<MyAcademyCarBook.EntityLayer.Concrete.Company>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Başlık</th>
        <th>Açıklama 1</th>
        <th>Açıklama 2</th>
        <th>Resim</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.CompanyID</td>
            <td>@item.Title</td>
            <td>@item.Description1</td>
            <td>@item.Description2</td>
            <td>@item.ImageUrl</td>
            <td><a href="/Company/DeleteCompany/@item.CompanyID" class="btn btn-outline-danger">Sil</a></td>
            <td><a href="/Company/UpdateCompany/@item.CompanyID" class="btn btn-outline-success">Güncelle</a></td>
        </tr>
    }
</table>
<a href="/Company/AddCompany/" class="btn btn-outline-primary">Yeni Şirketi Ekle</a>

