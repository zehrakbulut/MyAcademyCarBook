@model MyAcademyCarBook.EntityLayer.Concrete.CarCategory
@{
    ViewData["Title"] = "AddCarCategory";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h1>Yeni Kategori Girişi</h1>

<form method="post">
    <label>Kategori Adı</label>
    <input type="text" asp-for="CategoryName" class="form-control" style="border:1px solid #2222" />
    <label>Açıklama</label>
    <input type="text" asp-for="Description" class="form-control" style="border:1px solid #2222" />
    <label>Durum</label>
    <input type="text" asp-for="Status" class="form-control" style="border:1px solid #2222"/>
    <br />
    <button class="btn btn-primary">Kategoriyi Kaydet</button>
</form>

