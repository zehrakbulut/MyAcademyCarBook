@model MyAcademyCarBook.EntityLayer.Concrete.CarRant
@{
    ViewData["Title"] = "UpdateCarRant";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h1>Kira Güncelleme Sayfası</h1>

<form method="post">
    <input type="hidden" asp-for="CarRantID" />
    <label>Ad Soyad</label>
    <input type="text" asp-for="FullName" class="form-control" style="border:1px solid #2222" />
    <label>Mail</label>
    <input type="text" asp-for="Email" class="form-control" style="border:1px solid #2222" />
    <label>Gün Sayısı</label>
    <input type="text" asp-for="DayNumber" class="form-control" style="border:1px solid #2222" />
    <label>Araba</label>
    @Html.DropDownListFor(x=>x.CarID,(List<SelectListItem>)ViewBag.v,new {@class="form-control", @style="border:1px solid #2222"})
    <br />
    <button class="btn btn-success">Kirayı Güncelle</button>
</form>

