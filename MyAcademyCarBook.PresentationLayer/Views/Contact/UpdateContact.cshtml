@model MyAcademyCarBook.EntityLayer.Concrete.Contact
@{
    ViewData["Title"] = "UpdateContact";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h1>İletişim Güncelleme Sayfası</h1>

<form method="post">
    <label>Ad Soyad</label>
    <input type="text" asp-for="NameSurname" class="form-control" style="border:1px solid #2222" />
    <label>Konu</label>
    <input type="text" asp-for="Subject" class="form-control" style="border:1px solid #2222" />
    <label>Mail</label>
    <input type="text" asp-for="Mail" class="form-control" style="border:1px solid #2222" />
    <label>Açıklama</label>
    <input type="text" asp-for="Description" class="form-control" style="border:1px solid #2222" />
    <br />
    <button class="btn btn-primary">İletişimi Güncelle</button>
</form>
