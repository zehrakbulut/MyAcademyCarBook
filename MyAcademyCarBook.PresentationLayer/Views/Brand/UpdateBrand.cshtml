@model MyAcademyCarBook.EntityLayer.Concrete.Brand
@{
    ViewData["Title"] = "UpdateBrand";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h3>Marka Güncelleme Sayfası</h3>

<form method="post">
    <input type="hidden" asp-for="BrandID" />
    <label>Marka Adı</label>
    <input type="text" asp-for="BrandName" class="form-control" style="border:1px solid #222" />
    <br />
    <button class="btn btn-success">Markayı Güncelle</button>
</form>
