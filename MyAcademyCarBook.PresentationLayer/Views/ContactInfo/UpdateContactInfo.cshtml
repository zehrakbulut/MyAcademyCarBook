@model MyAcademyCarBook.EntityLayer.Concrete.ContactInfo
@{
    ViewData["Title"] = "UpdateContactInfo";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h1>İletişim Bilgi Güncelleme Sayfası</h1>

<form method="post">
    <input type="hidden" asp-for="ContactInfoID" />
    <label>Başlık</label>
    <input type="text" asp-for="Title" class="form-control" style="border:1px solid #2222" />
    <label>Açıklama</label>
    <input type="text" asp-for="Value" class=" form-control" style="border:1px solid #2222" />
    <br />
    <button class="btn btn-success">İletişim Bilgilerini Güncelle</button>
</form>
